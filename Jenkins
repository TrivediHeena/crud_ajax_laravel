pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                script{
                    git 'https://github.com/TrivediHeena/crud_ajax_laravel.git'
                    
                }
            }
        }
        stage('Build'){
            steps{
                bat '''
                    composer install
                    php artisan key:generate
                    cp .env.example .env                    
                '''
            }
        }
        stage('Test'){
            steps{
                //bat './vendor/bin/phpunit'
                bat 'php artisan test --without-tty'
            }
        }
    }
}