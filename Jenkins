pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                script{
                    git 'https://github.com/TrivediHeena/crud_ajax_laravel.git'
                    
                }
            }
        }
        stage('Build'){
            steps{
                bat '''
                    composer install
                    cp -a .env.example .env
                    chmod -744 .env
                    php artisan key:generate                    
                    php artisan config:cache
                    php artisan test --without-tty
                '''
            }
        }
        /*stage('Test'){
            steps{
                bat './vendor/bin/phpunit'
                //bat 'php artisan test --without-tty'
            }
        }*/
    }
    post{
        always{
            echo 'completed...'
        }
        success{
            echo 'Successfully completed...'
        }
        failure{

            mail bcc: '', body: 'There is an error', cc: 'mycloud1021@gmail.com', from: '', replyTo: '', subject: 'Pipeline Fail', to: 'mybook319@gmail.com'

            /*mail subject:'Laravel_Project_%env.JOB_NAME%',body:'<b>Laravel_Project_%env.JOB_NAME% has some problem<br/>on the build number %env.BUILD_NUMBER% on this URL. %env.BUILD_URL%', to:'mybook319@gmail.com'*/
        }
    }
}